{% layout 'layout.liquid' %}

{% block content %}
<div class="container-md" id="showAsgn"> 
    <form action="/assignments" method="POST">
        <div class="form-group">
            <label for="teacher">Teacher: </label>
            <input class="form-control" type="text" name="teacher" placeholder="Beethoven">
        </div>
        <div class="form-group">
            <label for="instrument">Instrument: </label>
            <input class="form-control" type="text" name="instrument" placeholder="Piano">
        </div>
        <div class="form-group">
            <label for="date">Date: </label>
            <input class="form-control" type="date" name="date">
        </div>
        <div class="form-group">
            <label for="technique">Technique: </label>
            <input class="form-control" type="text" name="technique" placeholder="Etudes, Scales, Exercises">
        </div>
        <div class="form-group">
            <label for="sight_reading">Sight Reading: </label>
            <input class="form-control" type="text" name="sight_reading" placeholder="Faber Level 1">
        </div>
        <div class="form-group">
            <label for="book">Book: </label>
            <input class="form-control" type="text" name="book" placeholder="Faber Level 1 Lesson">
        </div>
        <div class="form-group">
            <label for="notes">Notes/Comments: </label>
            <textarea class="form-control" type="text" name="notes" placeholder="notes"></textarea>
        </div>
        <div class="form-group">
            <button class="form-control" type="submit" class="btn btn-secondary">Submit</button>
        </div>
    </form>
</div>
{% endblock %}