{% layout 'layout.liquid' %}

{% block content %}
<div id="showAsgn">
    <h1>Profile Setup</h1>
        <form action="/profile" method="POST">
            <div class="form-group">
                <label for="name">Name: </label>
                    <input 
                        class="form-control"
                        type="text" 
                        name="name" 
                        placeholder="Ludwig van Beethoven"
                    >
            </div>
            <div class="form-group">
                <label for="email">Email: </label>
                    <input 
                        class="form-control" 
                        type="email" 
                        name="email"
                    >
            </div>
            <div class="form-group">
                <label for="phone">Phone Number: </label>
                    <input 
                        class="form-control"
                        type="string" 
                        name="phone" 
                        placeholder="555-555-5555"
                    >
            </div>
            <div class="form-group">
                <label for="age">Age: </label>
                    <input 
                        class="form-control"
                        type="number" 
                        name="age" 
                        placeholder="52"
                    >
            </div>
            <div class="form-group">
                <label for="dob">Date of Birth: </label>
                    <input 
                        class="form-control"
                        type="date" 
                        name="dob"
                    >
            </div>
            <div class="form-group">
                <label for="instruments">Instruments: </label>
                    <input 
                        class="form-control"
                        type="text" 
                        name="instruments" 
                        placeholder="piano, harpsichord, organ"
                    >
            </div>
            <div class="form-group">
                <label for="hobbies">Intrests/Hobbies: </label>
                    <input 
                        class="form-control"
                        type="text" 
                        name="hobbies" 
                        placeholder="soccer, reading"
                    >
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
{% endblock %}